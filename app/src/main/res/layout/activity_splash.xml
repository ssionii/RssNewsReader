<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="splashActivity"
            type="com.ssionii.rssnewsreader.ui.SplashActivity" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingHorizontal="60dp">

    <ImageView
        android:id="@+id/act_splash_iv_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/live"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/news"
        app:layout_constraintBottom_toBottomOf="@+id/act_splash_iv_logo"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/internet"
        app:layout_constraintBottom_toBottomOf="@+id/act_splash_iv_logo"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/act_splash_iv_logo">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="최신 뉴스를 제공합니다."
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="뉴스의 키워드를 알아보세요."
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="뉴스를 클릭하면 원본 뉴스를\n볼 수 있습니다."
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        versionName="@{splashActivity.versionName}"
        android:textStyle="bold"
        android:textSize="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/grey3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>